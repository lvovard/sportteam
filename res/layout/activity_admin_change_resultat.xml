<?xml version="1.0" encoding="utf-8"?>
 <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/linlayout"
    android:gravity="center"
    android:orientation="vertical"  >

<TextView
    android:id="@+id/textcat"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal"
    android:text="Sélectionner la catégorie" />

<Spinner
    android:id="@+id/spinner_cat"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal" /> 
    
    
<TextView
    android:id="@+id/textequipe"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal" 
    android:text="Sélectionner l'équipe" />
    
<Spinner
    android:id="@+id/spinner_equipe"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal" />

<CheckBox
    android:id="@+id/checkBoxconvoc"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal" 
    android:text="à partir d'une convocation" />

<TextView
    android:id="@+id/textconvoc"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal" 
    android:text="Sélectionner la convocation" />
    
<Spinner
    android:id="@+id/spinner_convoc"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal" />

<TextView
    android:id="@+id/textresult"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal" 
    android:text="Sélectionner le resultat" />


    
<Spinner
    android:id="@+id/spinner_result"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal" />

<Button
    android:id="@+id/btnDateMatch"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal"
    android:text="Clicker pour choisir la date du match" />  
    
<TextView
    android:id="@+id/textadversaire"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Entrer l'adversaire" />

<EditText
    android:id="@+id/txt_adversaire"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ems="10" />
    

<TextView
    android:id="@+id/textmatch"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal" 
    android:text="Sélectionner le type de match" />
    
<Spinner
    android:id="@+id/spinner_match"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal" />

<TextView
    android:id="@+id/textcompet"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal" 
    android:text="Sélectionner la competition" />
    
<Spinner
    android:id="@+id/spinner_compet"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal" />


    
<TextView
    android:id="@+id/textscoreequipe"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal"
    android:text="Entrez le score de l'équipe" />

<Spinner
    android:id="@+id/spinner_scoreequipe"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal" /> 
    
<TextView
    android:id="@+id/textscoreadversaire"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal"
    android:text="Entrez le score de l'adversaire" />

<Spinner
    android:id="@+id/spinner_scoreadversaire"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal" /> 

<TextView
    android:id="@+id/textdetail"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal"
    android:text="Entrez les détails du match (cartons,buts,...)" />

<EditText
    android:id="@+id/editTextdetail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ems="10"
    android:inputType="textMultiLine" />



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/linlayout"
    android:orientation="horizontal"  >
<Button
    android:id="@+id/btnValider"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:text="Valider" />  
    
<Button
    android:id="@+id/btnAnnuler"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:text="Annuler" /> 
</LinearLayout>


</LinearLayout>
</ScrollView>

